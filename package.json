{
  "name": "devspace-mcp-server",
  "version": "1.0.1",
  "description": "MCP server for DevSpace CLI tool - enables AI assistants to interact with DevSpace for Kubernetes development",
  "homepage": "https://github.com/RaghuChandrasekaran/devspace-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaghuChandrasekaran/devspace-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/RaghuChandrasekaran/devspace-mcp-server/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "devspace-mcp-server": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Add eslint when needed'",
    "test": "echo 'Add tests when needed'",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "devspace",
    "kubernetes",
    "development",
    "cli"
  ],
  "author": "DevSpace MCP Server",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.8.6",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "claude-desktop-config.example.json"
  ]
}
